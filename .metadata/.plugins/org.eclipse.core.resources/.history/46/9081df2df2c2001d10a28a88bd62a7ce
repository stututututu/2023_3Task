package base.comp;

import java.awt.event.WindowAdapter;
import java.awt.event.WindowEvent;

import javax.swing.JFrame;

public class BaseFrame extends JFrame implements IDesign{

	private BaseFrame preFrame;

	public void BaseFrame(String title, int w, int d, BaseFrame preFrame) {
		// TODO Auto-generated constructor stub
		
		this.preFrame = preFrame;
		
		setComp();
		setDesign();
		events();
		
		super.addWindowListener(new WindowAdapter() {
		
			@Override
			public void windowClosing(WindowEvent e) {
				// TODO Auto-generated method stub
				super.windowClosing(e);
				close();
			}

		});
		
		
		super.setTitle(title);
		super.setSize(w,d);
		super.setLocationRelativeTo(null);
		super.setDefaultCloseOperation(JFrame.DO_NOTHING_ON_CLOSE);
		super.setVisible(true);
		
		
	}

	public void close() {
		// TODO Auto-generated method stub
		if (preFrame == null) {
			System.exit(0);
			return;
		}
		this.dispose();
		preFrame.setVisible(true);
		preFrame.setState(JFrame.NORMAL);
	}
	public BaseFrame refresh() {
		super.validate();
		super.repaint();
		return this;
	}

	@Override
	public void setComp() {
		// TODO Auto-generated method stub
		
	}

	@Override
	public void setDesign() {
		// TODO Auto-generated method stub
		
	}

	@Override
	public void events() {
		// TODO Auto-generated method stub
		
	}
	
}
