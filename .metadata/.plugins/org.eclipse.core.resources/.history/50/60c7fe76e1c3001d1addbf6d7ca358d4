package framse;

import java.util.Calendar;

import javax.swing.JLabel;

import base.comp.BaseFrame;
import base.comp.BaseLable;

public class calenderFrame extends BaseFrame{

	private Calendar cal;
	private int year;
	private int month;
	private JLabel up;
	private JLabel down;
	private BaseLable jl;

	public calenderFrame() {
		// TODO Auto-generated constructor stub
		super.BaseFrame("날짜선택", 500, 500, new SearchFrame(null));
	}

	@Override
	public void setComp() {
		// TODO Auto-generated method stub
		cal = Calendar.getInstance();
		
		year = cal.get(Calendar.YEAR);
		month = cal.get(Calendar.MONTH);
		
		up = new JLabel("▶");
		down = new JLabel("◀");
		
		jl = new BaseLable(year + "년" + month + "일");
		
	}

	@Override
	public void setDesign() {
		// TODO Auto-generated method stub
		jpTop.setFlowCenter().add(down);
		jpTop.add(jl);
		jpTop.add(up);
		
	}

	@Override
	public void events() {
		// TODO Auto-generated method stub
		
	}

}
